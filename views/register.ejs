<%- include('./partials/header.ejs', {auth: auth}) %>
<h1>Register</h1>

<% if (errors && errors.length > 0) { %>
    <ul>
      <% errors.forEach((error) => { %>
        <li><%= error %></li>
      <% }); %>
    </ul>
<% } %>

<form method="POST" action="/auth/registration">
    <label>Enter email </label>
    <input type="email" name="email" label="Enter email" value="<%= email %>" />
    <br/>
    <label>Enter password </label>
    <input type="password" name="password" label="Enter password"/>
    <br/>
    <label>Confirm password </label>
    <input type="password" name="verification" label="Confirm password"/>
    <br/>
    <input type="submit" value="Submit!" />
</form>
<%- include('./partials/footer.ejs') %>